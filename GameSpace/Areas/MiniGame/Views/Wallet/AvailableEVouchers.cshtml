@model List<GameSpace.Models.EVoucherType>
@{
    ViewData["Title"] = "可兌換禮券";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">可兌換禮券</h1>

    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var evoucherType in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@evoucherType.Name</h5>
                            <p class="card-text">@evoucherType.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-muted">需要點數</span>
                                    <span class="h5 text-primary mb-0">@evoucherType.PointsCost</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-muted">有效期限</span>
                                    <small class="text-muted">@evoucherType.ValidFrom.ToString("yyyy/MM/dd") - @evoucherType.ValidTo.ToString("yyyy/MM/dd")</small>
                                </div>
                                <button class="btn btn-warning w-100" onclick="redeemEVoucher(@evoucherType.EVoucherTypeId)">
                                    兌換禮券
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="text-muted">暫無可兌換的禮券</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function redeemEVoucher(evoucherTypeId) {
            if (!confirm('確定要兌換此禮券嗎？')) return;

            try {
                const response = await fetch('@Url.Action("RedeemEVoucher")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ evoucherTypeId: evoucherTypeId })
                });

                const data = await response.json();
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                alert('兌換失敗，請稍後再試');
            }
        }
    </script>
}