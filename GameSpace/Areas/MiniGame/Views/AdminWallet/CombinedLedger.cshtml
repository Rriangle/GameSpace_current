    <script src="~/js/minigame-charts.js"></script>
    <script>
        // 頁面載入完成後初始化圖表
        document.addEventListener('DOMContentLoaded', function() {
            // 如果有統計資料，可以建立額外的分佈圖表
            const inflowData = @ViewBag.TotalInflow;
