            const evoucherData = @ViewBag.EVoucherCount;
            
            if (inflowData > 0 || outflowData > 0 || couponData > 0 || evoucherData > 0) {
                // 可以在此處新增額外的統計圖表
                console.log('總收支統計載入完成');
            }
        });
    </script>
}