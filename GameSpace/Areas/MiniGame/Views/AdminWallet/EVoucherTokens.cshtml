@model IEnumerable<GameSpace.Models.EVoucherToken>
@{
    ViewData["Title"] = "電子禮券 Token 管理";
    ViewData["BreadcrumbController"] = "錢包系統";
    ViewData["BreadcrumbAction"] = "禮券 Token 管理";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">電子禮券 Token 管理</h1>
        <div class="d-none d-lg-inline-block">
            <small class="text-muted">管理電子禮券的一次性使用 Token</small>
        </div>
    </div>

    <!-- 篩選區域 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">篩選條件</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="evoucherId" class="form-label">電子禮券 ID</label>
                    <input type="number" class="form-control" id="evoucherId" name="evoucherId" 
                           value="@ViewBag.EVoucherId" placeholder="輸入禮券 ID">
                </div>
                <div class="col-md-3">
                    <label for="isRevoked" class="form-label">撤銷狀態</label>
                    <select class="form-select" id="isRevoked" name="isRevoked">
                        <option value="">全部</option>
                        <option value="false" @(ViewBag.IsRevoked == false ? "selected" : "")>有效</option>
                        <option value="true" @(ViewBag.IsRevoked == true ? "selected" : "")>已撤銷</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> 搜尋
                    </button>
                    <a href="@Url.Action("EVoucherTokens")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> 清除
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Token 列表 -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Token 列表 
                <span class="badge bg-info">@ViewBag.TotalCount 筆記錄</span>
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Token ID</th>
                                <th>禮券代碼</th>
                                <th>持有者</th>
                                <th>Token</th>
                                <th>到期時間</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var token in Model)
                            {
                                <tr>
                                    <td>@token.TokenID</td>
                                    <td>
                                        <code>@token.EVoucher.EVoucherCode</code>
                                    </td>
                                    <td>
                                        @token.EVoucher.User.UserName
                                        <small class="text-muted d-block">@token.EVoucher.User.UserNickName</small>
                                    </td>
                                    <td>
                                        <code class="text-truncate" style="max-width: 120px; display: inline-block;">
                                            @token.Token
                                        </code>
                                    </td>
                                    <td>
                                        @token.ExpiresAt.ToString("yyyy/MM/dd HH:mm")
                                        @if (token.ExpiresAt < DateTime.UtcNow)
                                        {
                                            <span class="badge bg-danger">已過期</span>
                                        }
                                    </td>
                                    <td>
                                        @if (token.IsRevoked)
                                        {
                                            <span class="badge bg-danger">已撤銷</span>
                                        }
                                        else if (token.ExpiresAt < DateTime.UtcNow)
                                        {
                                            <span class="badge bg-warning">已過期</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">有效</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EVoucherTokenDetails", new { id = token.TokenID })" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> 詳細
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 分頁 -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="分頁導航">
                        <ul class="pagination justify-content-center">
                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("EVoucherTokens", new { page = ViewBag.Page - 1, evoucherId = ViewBag.EVoucherId, isRevoked = ViewBag.IsRevoked })">
                                        上一頁
                                    </a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("EVoucherTokens", new { page = i, evoucherId = ViewBag.EVoucherId, isRevoked = ViewBag.IsRevoked })">
                                        @i
                                    </a>
                                </li>
                            }
                            
                            @if (ViewBag.Page < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("EVoucherTokens", new { page = ViewBag.Page + 1, evoucherId = ViewBag.EVoucherId, isRevoked = ViewBag.IsRevoked })">
                                        下一頁
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-key fa-3x text-muted mb-3"></i>
                    <p class="text-muted">目前沒有 Token 記錄</p>
                </div>
            }
        </div>
    </div>
</div>