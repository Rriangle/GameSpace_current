@{
    ViewData["Title"] = "遊戲統計報表";
    ViewData["BreadcrumbController"] = "小遊戲系統";
    ViewData["BreadcrumbAction"] = "遊戲統計";
    Layout = "~/Areas/MiniGame/Views/Shared/_AdminLayout.cshtml";
    var levelStats = ViewBag.LevelStats as List<dynamic>;
    var dailyStats = ViewBag.DailyStats as List<dynamic>;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">遊戲統計報表</h1>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>返回列表
        </a>
        @{
            ViewData["ExportCsvAction"] = "StatisticsExportCsv";
            ViewData["ExportJsonAction"] = "StatisticsExportJson";
            ViewData["ExportParams"] = new { 
                from = ViewBag.From?.ToString("yyyy-MM-dd"),
                to = ViewBag.To?.ToString("yyyy-MM-dd")
            };
        }
        @await Html.PartialAsync("_ExportButtons")
    </div>
</div>

<!-- 日期範圍工具列 -->
@await Html.PartialAsync("_DateRangeToolbar")

<!-- 圖表區域 -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">每日場次與點數</h6>
            </div>
            <div class="card-body">
                <canvas id="sessionsPointsChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">每日 EXP 與 Coupon 數</h6>
            </div>
            <div class="card-body">
                <canvas id="expCouponChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- 日期範圍選擇 -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">統計範圍</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="startDate" class="form-label">開始日期</label>
                <input type="date" class="form-control" id="startDate" name="startDate" 
                       value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" required>
            </div>
            <div class="col-md-4">
                <label for="endDate" class="form-label">結束日期</label>
                <input type="date" class="form-control" id="endDate" name="endDate" 
                       value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" required>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="btn-group w-100">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-chart-line me-1"></i>重新統計
                    </button>
                    <button type="button" class="btn btn-outline-info" onclick="setQuickRange('week')">近7天</button>
                    <button type="button" class="btn btn-outline-info" onclick="setQuickRange('month')">近30天</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- 總體統計卡片 -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            總遊戲次數
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.TotalGames?.ToString("N0") 次
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-gamepad fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            勝率
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.WinRate?.ToString("F1")%
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-trophy fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            發放總點數
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.TotalPoints?.ToString("N0") 點
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-coins fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            發放總經驗
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.TotalExp?.ToString("N0") EXP
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-star fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 關卡統計 -->
<div class="row">
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">關卡統計</h6>
            </div>
            <div class="card-body">
                @if (levelStats != null && levelStats.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>關卡</th>
                                    <th>遊戲次數</th>
                                    <th>勝率</th>
                                    <th>平均點數</th>
                                    <th>平均經驗</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in levelStats)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-warning text-dark">第 @stat.Level 關</span>
                                        </td>
                                        <td class="text-end">@stat.Count</td>
                                        <td class="text-end">
                                            <span class="badge @GetWinRateBadgeClass((double)stat.WinRate)">
                                                @((double)stat.WinRate).ToString("F1")%
                                            </span>
                                        </td>
                                        <td class="text-end">@((double)stat.AvgPoints).ToString("F0")</td>
                                        <td class="text-end">@((double)stat.AvgExp).ToString("F0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">暫無關卡統計資料</h6>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">結果分佈</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="resultChart" width="100%" height="50"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2">
                        <i class="fas fa-circle text-success"></i> 勝利 (@ViewBag.WinCount)
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-danger"></i> 失敗 (@ViewBag.LoseCount)
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-warning"></i> 退出 (@ViewBag.AbortCount)
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // 圖表初始化
        document.addEventListener('DOMContentLoaded', function() {
            loadMiniGameCharts();
        });

        async function loadMiniGameCharts() {
            try {
                const urlParams = new URLSearchParams(window.location.search);
                const from = urlParams.get('from') || '@DateTime.UtcNow.AddDays(-14).ToString("yyyy-MM-dd")';
                const to = urlParams.get('to') || '@DateTime.UtcNow.ToString("yyyy-MM-dd")';
                
                const response = await fetch(`/MiniGame/AdminAnalytics/MiniGameOverview?from=${from}&to=${to}`);
                const data = await response.json();
                
                if (data.status === 'ok') {
                    renderSessionsPointsChart(data.series);
                    renderExpCouponChart(data.series);
                } else {
                    showError('資料載入失敗：' + (data.message || '未知錯誤'));
                }
            } catch (error) {
                showError('圖表載入失敗：' + error.message);
            }
        }

        function renderSessionsPointsChart(series) {
            const ctx = document.getElementById('sessionsPointsChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: series.map(s => s.date),
                    datasets: [{
                        label: '遊戲場次',
                        data: series.map(s => s.sessions),
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        yAxisID: 'y'
                    }, {
                        label: '獲得點數',
                        data: series.map(s => s.pointsSum),
                        borderColor: '#1cc88a',
                        backgroundColor: 'rgba(28, 200, 138, 0.1)',
                        yAxisID: 'y1'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: { display: true, text: '遊戲場次' }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: { display: true, text: '點數' },
                            grid: { drawOnChartArea: false }
                        }
                    },
                    plugins: {
                        legend: { display: true },
                        tooltip: {
                            callbacks: {
                                title: function(context) {
                                    return '日期：' + context[0].label;
                                }
                            }
                        }
                    }
                }
            });
        }

        function renderExpCouponChart(series) {
            const ctx = document.getElementById('expCouponChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: series.map(s => s.date),
                    datasets: [{
                        label: 'EXP 總和',
                        data: series.map(s => s.expSum),
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Coupon 數量',
                        data: series.map(s => s.couponCount),
                        backgroundColor: 'rgba(255, 206, 86, 0.8)',
                        borderColor: 'rgba(255, 206, 86, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: '數量' }
                        }
                    },
                    plugins: {
                        legend: { display: true },
                        tooltip: {
                            callbacks: {
                                title: function(context) {
                                    return '日期：' + context[0].label;
                                }
                            }
                        }
                    }
                }
            });
        }

        function showError(message) {
            const alertHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`;
            document.querySelector('.container-fluid').insertAdjacentHTML('afterbegin', alertHtml);
        }

        function setQuickRange(type) {
            var endDate = new Date();
            var startDate = new Date();
            
            if (type === 'week') {
                startDate.setDate(endDate.getDate() - 6);
            } else if (type === 'month') {
                startDate.setDate(endDate.getDate() - 29);
            }
            
            document.getElementById('startDate').value = startDate.toISOString().split('T')[0];
            document.getElementById('endDate').value = endDate.toISOString().split('T')[0];
        }


        // 初始化結果分佈圖表
        $(document).ready(function() {
            var ctx = document.getElementById('resultChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['勝利', '失敗', '退出'],
                    datasets: [{
                        data: [@ViewBag.WinCount, @ViewBag.LoseCount, @ViewBag.AbortCount],
                        backgroundColor: ['#1cc88a', '#e74a3b', '#f6c23e']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        });
    </script>
}

@functions {
    string GetWinRateBadgeClass(double winRate)
    {
        if (winRate >= 80) return "bg-success";
        if (winRate >= 60) return "bg-info";
        if (winRate >= 40) return "bg-warning text-dark";
        return "bg-danger";
    }
}