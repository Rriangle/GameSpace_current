@model List<GameSpace.Models.Order>
@{
    ViewData["Title"] = "我的訂單";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">我的訂單</h1>

    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">訂單 #@order.OrderId</h5>
                            <span class="badge bg-@(order.Status switch {
                                "已付款" => "success",
                                "處理中" => "warning",
                                "已完成" => "info",
                                "已取消" => "danger",
                                _ => "secondary"
                            })">@order.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>訂單日期：</strong>@order.OrderDate.ToString("yyyy/MM/dd HH:mm")</p>
                                    <p><strong>總金額：</strong>@order.TotalAmount 點</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>商品數量：</strong>@order.OrderDetails.Count 項</p>
                                    <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-outline-primary btn-sm">查看詳情</a>
                                </div>
                            </div>
                            
                            <!-- 訂單商品列表 -->
                            <div class="mt-3">
                                <h6>商品清單：</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>商品名稱</th>
                                                <th>單價</th>
                                                <th>數量</th>
                                                <th>小計</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in order.OrderDetails)
                                            {
                                                <tr>
                                                    <td>@detail.ProductInfo?.ProductName</td>
                                                    <td>@detail.UnitPrice 點</td>
                                                    <td>@detail.Quantity</td>
                                                    <td>@detail.TotalPrice 點</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="text-muted">暫無訂單記錄</p>
            <a asp-action="Index" class="btn btn-primary">前往商城</a>
        </div>
    }
</div>