@model GameSpace.Models.Order
@{
    ViewData["Title"] = "訂單詳情";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">訂單詳情</h1>

    <div class="row">
        <!-- 訂單資訊 -->
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="m-0 font-weight-bold text-primary">訂單 #@Model.OrderId</h6>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge bg-@(Model.Status switch {
                                "已付款" => "success",
                                "處理中" => "warning",
                                "已完成" => "info",
                                "已取消" => "danger",
                                _ => "secondary"
                            }) fs-6">@Model.Status</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>用戶：</strong>@Model.User?.Username</p>
                            <p><strong>訂單日期：</strong>@Model.OrderDate.ToString("yyyy/MM/dd HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>總金額：</strong><span class="h5 text-primary">@Model.TotalAmount 點</span></p>
                            <p><strong>商品數量：</strong>@Model.OrderDetails.Count 項</p>
                        </div>
                    </div>

                    <h6 class="mb-3">商品清單：</h6>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>商品名稱</th>
                                    <th>分類</th>
                                    <th>單價</th>
                                    <th>數量</th>
                                    <th>小計</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@detail.ProductInfo?.ProductName</td>
                                        <td><span class="badge bg-secondary">@detail.ProductInfo?.Category</span></td>
                                        <td>@detail.UnitPrice 點</td>
                                        <td>@detail.Quantity</td>
                                        <td class="text-primary fw-bold">@detail.TotalPrice 點</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <th colspan="4" class="text-end">總計：</th>
                                    <th class="text-primary">@Model.TotalAmount 點</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <a asp-action="Orders" class="btn btn-outline-secondary">返回訂單列表</a>
        </div>
    </div>
</div>