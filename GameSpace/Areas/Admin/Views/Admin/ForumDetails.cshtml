@model GameSpace.Models.Forum
@{
    ViewData["Title"] = "討論詳情";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">討論詳情</h1>

    <div class="row">
        <!-- 討論內容 -->
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="m-0 font-weight-bold text-primary">@Model.Title</h6>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                @(Model.IsActive ? "正常" : "已刪除")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">
                                作者：@Model.User?.Username | 
                                發表時間：@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge bg-primary">瀏覽 @Model.ViewCount</span>
                            <span class="badge bg-success">評論 @Model.ForumComments?.Count</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        @Html.Raw(Model.Content.Replace("\n", "<br>"))
                    </div>

                    @if (Model.UpdatedAt > Model.CreatedAt)
                    {
                        <div class="text-muted">
                            <small>最後更新：@Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 評論列表 -->
    @if (Model.ForumComments?.Any() == true)
    {
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">評論列表 (@Model.ForumComments.Count)</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var comment in Model.ForumComments.OrderBy(c => c.CreatedAt))
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p class="mb-1">@comment.Content</p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <small class="text-muted">
                                                @comment.User?.Username | 
                                                @comment.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 操作按鈕 -->
    <div class="row">
        <div class="col-12 text-center">
            <a asp-action="Forums" class="btn btn-outline-secondary">返回討論列表</a>
            @if (Model.IsActive)
            {
                <form asp-action="DeleteForum" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.ForumId" />
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('確定要刪除此討論嗎？')">刪除討論</button>
                </form>
            }
        </div>
    </div>
</div>