@model GameSpace.Models.ProductInfo
@{
    ViewData["Title"] = "新增商品";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">新增商品</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">商品資訊</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProduct" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductName" class="form-label">商品名稱</label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label">分類</label>
                                <input asp-for="Category" class="form-control" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">價格</label>
                                <input asp-for="Price" class="form-control" type="number" min="0" step="1" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label">狀態</label>
                                <select asp-for="IsActive" class="form-select">
                                    <option value="true">上架</option>
                                    <option value="false">下架</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">商品描述</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Products" class="btn btn-outline-secondary">取消</a>
                            <button type="submit" class="btn btn-primary">新增商品</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}