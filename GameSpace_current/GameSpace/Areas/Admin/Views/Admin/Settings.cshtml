@{
    ViewData["Title"] = "系統設定";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">系統設定</h1>

    <div class="row">
        <!-- 基本設定 -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">基本設定</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">網站名稱</label>
                            <input type="text" class="form-control" value="GameSpace" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">網站描述</label>
                            <textarea class="form-control" rows="3" readonly>一個有趣的寵物養成遊戲平台</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">維護模式</label>
                            <select class="form-select">
                                <option value="false">正常運行</option>
                                <option value="true">維護模式</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">儲存設定</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- 遊戲設定 -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">遊戲設定</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">每日簽到獎勵</label>
                            <input type="number" class="form-control" value="20" min="0">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">小遊戲每日次數限制</label>
                            <input type="number" class="form-control" value="3" min="1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">寵物升級經驗倍率</label>
                            <input type="number" class="form-control" value="1.0" step="0.1" min="0.1">
                        </div>
                        <button type="submit" class="btn btn-primary">儲存設定</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 系統資訊 -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">系統資訊</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6 class="text-primary">資料庫狀態</h6>
                            <p class="text-success">正常運行</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-primary">伺服器狀態</h6>
                            <p class="text-success">正常運行</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-primary">記憶體使用率</h6>
                            <p class="text-info">45%</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-primary">CPU使用率</h6>
                            <p class="text-info">23%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 備份與維護 -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">備份與維護</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <button class="btn btn-outline-primary w-100 mb-2">建立資料庫備份</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-warning w-100 mb-2">清理過期資料</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-danger w-100 mb-2">重啟系統</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>