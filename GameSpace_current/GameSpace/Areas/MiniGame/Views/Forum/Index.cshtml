@model List<GameSpace.Models.Forum>
@{
    ViewData["Title"] = "論壇";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">論壇</h1>

    <!-- 搜尋和操作 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <form method="get" asp-action="Search">
                                <div class="input-group">
                                    <input type="text" name="keyword" class="form-control" placeholder="搜尋討論標題或內容" value="@ViewBag.Keyword">
                                    <button type="submit" class="btn btn-outline-primary">搜尋</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="Create" class="btn btn-primary me-2">發表新討論</a>
                            <a asp-action="MyForums" class="btn btn-outline-info">我的討論</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 討論列表 -->
    @if (Model?.Any() == true)
    {
        <div class="row">
            @foreach (var forum in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title">
                                        <a asp-action="Details" asp-route-id="@forum.ForumId" class="text-decoration-none">
                                            @forum.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">
                                        @(forum.Content.Length > 100 ? forum.Content.Substring(0, 100) + "..." : forum.Content)
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            作者：@forum.User?.Username
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            發表時間：@forum.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <span class="badge bg-primary">瀏覽 @forum.ViewCount</span>
                                        <span class="badge bg-success">評論 @forum.ForumComments?.Count</span>
                                    </div>
                                    @if (forum.UpdatedAt > forum.CreatedAt)
                                    {
                                        <div>
                                            <small class="text-muted">
                                                最後更新：@forum.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                                            </small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="text-muted">暫無討論</p>
            <a asp-action="Create" class="btn btn-primary">發表第一個討論</a>
        </div>
    }
</div>