@* MiniGame Area Admin 專用頂部導航欄 - SB Admin 風格 *@
<nav class="topbar d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
        <button class="btn btn-link d-md-none" type="button" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-area="MiniGame" asp-controller="AdminWallet" asp-action="Index">MiniGame 管理</a>
                </li>
                @if (ViewData["BreadcrumbController"] != null)
                {
                    <li class="breadcrumb-item">@ViewData["BreadcrumbController"]</li>
                }
                @if (ViewData["BreadcrumbAction"] != null)
                {
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["BreadcrumbAction"]</li>
                }
            </ol>
        </nav>
    </div>
    <div class="d-flex align-items-center">
        <div class="dropdown me-3">
            <button class="btn btn-outline-info btn-sm dropdown-toggle" type="button" id="healthDropdown" 
                    data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-heartbeat me-1"></i>系統狀態
            </button>
            <ul class="dropdown-menu" aria-labelledby="healthDropdown">
                <li>
                    <a class="dropdown-item" href="@Url.Action("Database", "Health", new { area = "MiniGame" })" target="_blank">
                        <i class="fas fa-database me-2"></i>資料庫檢查
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("Status", "Health", new { area = "MiniGame" })" target="_blank">
                        <i class="fas fa-info-circle me-2"></i>系統狀態
                    </a>
                </li>
            </ul>
        </div>
        <span class="me-3 text-muted">管理員：@User.Identity.Name</span>
        <a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt me-1"></i>登出
        </a>
    </div>
</nav>