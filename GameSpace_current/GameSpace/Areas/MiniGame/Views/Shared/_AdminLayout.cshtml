<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameSpace MiniGame 管理後台</title>
    
    <!-- SB Admin CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        :root {
            --sidebar-width: 250px;
            --header-height: 60px;
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --light-color: #f8f9fc;
            --dark-color: #5a5c69;
        }

        body {
            background-color: #f8f9fc;
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: #fff;
            width: var(--sidebar-width);
        }

        .sidebar-brand {
            height: var(--header-height);
            text-decoration: none;
            font-size: 1rem;
            font-weight: 800;
            padding: 1.5rem 1rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 0.05rem;
            z-index: 1;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-nav {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            display: block;
            padding: 1rem;
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 400;
            border-left: 3px solid transparent;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary-color);
            background-color: #eaecf4;
            border-left-color: var(--primary-color);
        }

        .nav-link i {
            margin-right: 0.5rem;
            width: 1rem;
            text-align: center;
        }

        .nav-heading {
            padding: 0.75rem 1rem 0.25rem;
            font-size: 0.65rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            color: var(--secondary-color);
        }

        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }

        .topbar {
            height: var(--header-height);
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            padding: 0 1.5rem;
        }

        .content-wrapper {
            padding: 1.5rem;
        }

        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.35rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 0.75rem 1.25rem;
            font-weight: 700;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2e59d9;
        }

        .table th {
            border-top: none;
            font-weight: 800;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            color: var(--secondary-color);
        }

        .breadcrumb {
            background-color: transparent;
            margin-bottom: 0;
        }

        .alert {
            border: none;
            border-radius: 0.35rem;
        }

        .badge {
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
        }

        .pagination .page-link {
            border: none;
            color: var(--secondary-color);
            font-weight: 700;
        }

        .pagination .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        /* 響應式設計 */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
            }
            
            .sidebar.show {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- 側邊欄 -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-gamepad me-2"></i>
                MiniGame Admin
            </div>
            
            <ul class="sidebar-nav">
                <div class="nav-heading">錢包系統</div>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWallet" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWallet" asp-action="Index">
                        <i class="fas fa-wallet"></i>
                        錢包列表
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWallet" && ViewContext.RouteData.Values["action"]?.ToString() == "History" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWallet" asp-action="History">
                        <i class="fas fa-history"></i>
                        錢包歷史
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWallet" && ViewContext.RouteData.Values["action"]?.ToString() == "Coupons" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWallet" asp-action="Coupons">
                        <i class="fas fa-ticket-alt"></i>
                        優惠券管理
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWallet" && ViewContext.RouteData.Values["action"]?.ToString() == "EVouchers" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWallet" asp-action="EVouchers">
                        <i class="fas fa-gift"></i>
                        電子禮券管理
                    </a>
                </li>

                <div class="nav-heading">券類型設定</div>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWalletTypes" && ViewContext.RouteData.Values["action"]?.ToString() == "CouponTypes" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWalletTypes" asp-action="CouponTypes">
                        <i class="fas fa-tags"></i>
                        優惠券類型
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminWalletTypes" && ViewContext.RouteData.Values["action"]?.ToString() == "EVoucherTypes" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminWalletTypes" asp-action="EVoucherTypes">
                        <i class="fas fa-certificate"></i>
                        禮券類型
                    </a>
                </li>

                <div class="nav-heading">簽到系統</div>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminSignInStats" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminSignInStats" asp-action="Index">
                        <i class="fas fa-calendar-check"></i>
                        簽到記錄
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminSignInStats" && ViewContext.RouteData.Values["action"]?.ToString() == "Statistics" ? "active" : "")" 
                       asp-area="MiniGame" asp-controller="AdminSignInStats" asp-action="Statistics">
                        <i class="fas fa-chart-bar"></i>
                        簽到統計
                    </a>
                </li>

                <div class="nav-heading">寵物系統</div>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="alert('寵物管理功能開發中')">
                        <i class="fas fa-paw"></i>
                        寵物管理 <span class="badge bg-warning ms-2">開發中</span>
                    </a>
                </li>

                <div class="nav-heading">小遊戲系統</div>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="alert('小遊戲管理功能開發中')">
                        <i class="fas fa-gamepad"></i>
                        遊戲管理 <span class="badge bg-warning ms-2">開發中</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- 主要內容區域 -->
        <div class="main-content">
            <!-- 頂部導航欄 -->
            <nav class="topbar d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link d-md-none" type="button" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-area="MiniGame" asp-controller="AdminWallet" asp-action="Index">MiniGame 管理</a>
                            </li>
                            @if (ViewData["BreadcrumbController"] != null)
                            {
                                <li class="breadcrumb-item">@ViewData["BreadcrumbController"]</li>
                            }
                            @if (ViewData["BreadcrumbAction"] != null)
                            {
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["BreadcrumbAction"]</li>
                            }
                        </ol>
                    </nav>
                </div>
                <div class="d-flex align-items-center">
                    <span class="me-3">管理員：@User.Identity.Name</span>
                    <a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt me-1"></i>登出
                    </a>
                </div>
            </nav>

            <!-- 內容區域 -->
            <div class="content-wrapper">
                <!-- 訊息提示 -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        @TempData["InfoMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- 主要內容 -->
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        // 側邊欄切換功能
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });

        // 自動隱藏提示訊息
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>