@model List<GameSpace.Models.Coupon>
@{
    ViewData["Title"] = "優惠券管理";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">優惠券管理</h1>

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">優惠券列表</h6>
        </div>
        <div class="card-body">
            @if (Model?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>優惠券ID</th>
                                <th>優惠券代碼</th>
                                <th>用戶</th>
                                <th>類型</th>
                                <th>獲得時間</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coupon in Model)
                            {
                                <tr>
                                    <td>@coupon.CouponId</td>
                                    <td><code>@coupon.CouponCode</code></td>
                                    <td>@coupon.User?.Username</td>
                                    <td>@coupon.CouponType?.Name</td>
                                    <td>@coupon.AcquiredTime.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        <span class="badge bg-@(coupon.IsUsed ? "secondary" : "success")">
                                            @(coupon.IsUsed ? "已使用" : "未使用")
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewCouponDetails(@coupon.CouponId)">查看詳情</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center">暫無優惠券</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewCouponDetails(couponId) {
            // 這裡可以實現查看優惠券詳情的邏輯
            alert('查看優惠券詳情功能開發中，優惠券ID: ' + couponId);
        }
    </script>
}