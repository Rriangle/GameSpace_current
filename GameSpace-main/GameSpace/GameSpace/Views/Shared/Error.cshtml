@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="text-danger">An error occurred while processing your request.</h3>
            </div>
            <div class="card-body">
                @if (Model?.ShowRequestId == true)
                {
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                <p>
                    We apologize for the inconvenience. Please try again later or contact support if the problem persists.
                </p>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home", new { area = "Public" })" class="btn btn-primary">Go Home</a>
                </div>
            </div>
        </div>
    </div>
</div>