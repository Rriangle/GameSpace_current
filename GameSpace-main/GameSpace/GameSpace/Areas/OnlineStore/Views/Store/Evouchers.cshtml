@model IEnumerable<GameSpace.Models.Evoucher>

@{
    ViewData["Title"] = "Evouchers";
    Layout = "~/Areas/OnlineStore/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Available Evouchers</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var evoucher in Model)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@evoucher.EvoucherName</h5>
                                    <p class="card-text">@evoucher.EvoucherDescription</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 text-success">@evoucher.EvoucherPrice Points</span>
                                        <button class="btn btn-success btn-sm" onclick="purchaseEvoucher(@evoucher.EvoucherID)">
                                            Purchase
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function purchaseEvoucher(evoucherId) {
    fetch('/api/OnlineStore/Store/PurchaseEvoucher', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ evoucherId: evoucherId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Evoucher purchased successfully!');
        } else {
            alert('Purchase failed: ' + data.message);
        }
    })
    .catch(error => {
        alert('Error: ' + error);
    });
}
</script>