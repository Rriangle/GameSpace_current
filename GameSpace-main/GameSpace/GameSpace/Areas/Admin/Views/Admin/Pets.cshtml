@model IEnumerable<GameSpace.Models.Pet>

@{
    ViewData["Title"] = "寵物管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">寵物管理</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>寵物ID</th>
                                    <th>寵物名稱</th>
                                    <th>主人</th>
                                    <th>等級</th>
                                    <th>經驗值</th>
                                    <th>飢餓度</th>
                                    <th>心情</th>
                                    <th>體力</th>
                                    <th>清潔度</th>
                                    <th>膚色</th>
                                    <th>建立時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pet in Model)
                                {
                                    <tr>
                                        <td>@pet.PetId</td>
                                        <td>@pet.PetName</td>
                                        <td>@pet.User?.UserName</td>
                                        <td>
                                            <span class="badge bg-primary">@pet.Level 級</span>
                                        </td>
                                        <td>@pet.Experience</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(pet.Hunger > 50 ? "bg-success" : pet.Hunger > 20 ? "bg-warning" : "bg-danger")" 
                                                     style="width: @pet.Hunger%">@pet.Hunger%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(pet.Mood > 50 ? "bg-success" : pet.Mood > 20 ? "bg-warning" : "bg-danger")" 
                                                     style="width: @pet.Mood%">@pet.Mood%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(pet.Stamina > 50 ? "bg-success" : pet.Stamina > 20 ? "bg-warning" : "bg-danger")" 
                                                     style="width: @pet.Stamina%">@pet.Stamina%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @(pet.Cleanliness > 50 ? "bg-success" : pet.Cleanliness > 20 ? "bg-warning" : "bg-danger")" 
                                                     style="width: @pet.Cleanliness%">@pet.Cleanliness%</div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge" style="background-color: @pet.SkinColor; color: white;">@pet.SkinColor</span>
                                        </td>
                                        <td>@pet.CreatedTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        data-bs-toggle="modal" data-bs-target="#petModal@(pet.PetId)">
                                                    <i class="fas fa-eye"></i> 查看
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </button>
                                                <form asp-action="DeletePet" method="post" class="d-inline" 
                                                      onsubmit="return confirm('確定要刪除寵物 @pet.PetName 嗎？')">
                                                    <input type="hidden" name="id" value="@pet.PetId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i> 刪除
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 寵物詳情模態框 -->
@foreach (var pet in Model)
{
    <div class="modal fade" id="petModal@(pet.PetId)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">寵物詳情 - @pet.PetName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>基本資訊</h6>
                            <table class="table table-sm">
                                <tr><td>寵物ID：</td><td>@pet.PetId</td></tr>
                                <tr><td>寵物名稱：</td><td>@pet.PetName</td></tr>
                                <tr><td>主人：</td><td>@pet.User?.UserName</td></tr>
                                <tr><td>等級：</td><td>@pet.Level</td></tr>
                                <tr><td>經驗值：</td><td>@pet.Experience</td></tr>
                                <tr><td>膚色：</td><td><span class="badge" style="background-color: @pet.SkinColor; color: white;">@pet.SkinColor</span></td></tr>
                                <tr><td>建立時間：</td><td>@pet.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>狀態資訊</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td>飢餓度：</td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(pet.Hunger > 50 ? "bg-success" : pet.Hunger > 20 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @pet.Hunger%">@pet.Hunger%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>心情：</td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(pet.Mood > 50 ? "bg-success" : pet.Mood > 20 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @pet.Mood%">@pet.Mood%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>體力：</td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(pet.Stamina > 50 ? "bg-success" : pet.Stamina > 20 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @pet.Stamina%">@pet.Stamina%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>清潔度：</td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(pet.Cleanliness > 50 ? "bg-success" : pet.Cleanliness > 20 ? "bg-warning" : "bg-danger")" 
                                                 style="width: @pet.Cleanliness%">@pet.Cleanliness%</div>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>狀態分析</h6>
                            <div class="alert @(pet.Hunger < 20 ? "alert-danger" : pet.Hunger < 50 ? "alert-warning" : "alert-success")">
                                <i class="fas fa-utensils"></i> 飢餓度：@(pet.Hunger < 20 ? "需要立即餵食" : pet.Hunger < 50 ? "建議餵食" : "狀態良好")
                            </div>
                            <div class="alert @(pet.Mood < 20 ? "alert-danger" : pet.Mood < 50 ? "alert-warning" : "alert-success")">
                                <i class="fas fa-smile"></i> 心情：@(pet.Mood < 20 ? "需要陪伴" : pet.Mood < 50 ? "建議互動" : "心情愉快")
                            </div>
                            <div class="alert @(pet.Stamina < 20 ? "alert-danger" : pet.Stamina < 50 ? "alert-warning" : "alert-success")">
                                <i class="fas fa-battery-full"></i> 體力：@(pet.Stamina < 20 ? "需要休息" : pet.Stamina < 50 ? "建議休息" : "體力充沛")
                            </div>
                            <div class="alert @(pet.Cleanliness < 20 ? "alert-danger" : pet.Cleanliness < 50 ? "alert-warning" : "alert-success")">
                                <i class="fas fa-shower"></i> 清潔度：@(pet.Cleanliness < 20 ? "需要清潔" : pet.Cleanliness < 50 ? "建議清潔" : "非常乾淨")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-warning">編輯寵物</button>
                    <form asp-action="DeletePet" method="post" class="d-inline" 
                          onsubmit="return confirm('確定要刪除寵物 @pet.PetName 嗎？')">
                        <input type="hidden" name="id" value="@pet.PetId" />
                        <button type="submit" class="btn btn-danger">刪除寵物</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}