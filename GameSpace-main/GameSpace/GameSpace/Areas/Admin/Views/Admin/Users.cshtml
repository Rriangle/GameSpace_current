@model IEnumerable<GameSpace.Models.User>

@{
    ViewData["Title"] = "用戶管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">用戶管理</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>用戶ID</th>
                                    <th>用戶名稱</th>
                                    <th>電子郵件</th>
                                    <th>電話</th>
                                    <th>錢包點數</th>
                                    <th>寵物數</th>
                                    <th>簽到次數</th>
                                    <th>建立時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.UserId</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Phone</td>
                                        <td>
                                            @if (user.UserWallets?.Any() == true)
                                            {
                                                <span class="badge bg-success">@user.UserWallets.First().Points 點</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">0 點</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@(user.Pets?.Count ?? 0) 隻</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">@(user.UserSignInStats?.Count ?? 0) 次</span>
                                        </td>
                                        <td>@user.CreatedTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        data-bs-toggle="modal" data-bs-target="#userModal@(user.UserId)">
                                                    <i class="fas fa-eye"></i> 查看
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i> 編輯
                                                </button>
                                                <form asp-action="DeleteUser" method="post" class="d-inline" 
                                                      onsubmit="return confirm('確定要刪除用戶 @user.UserName 及其所有相關資料嗎？')">
                                                    <input type="hidden" name="id" value="@user.UserId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i> 刪除
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 用戶詳情模態框 -->
@foreach (var user in Model)
{
    <div class="modal fade" id="userModal@(user.UserId)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">用戶詳情 - @user.UserName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>基本資訊</h6>
                            <table class="table table-sm">
                                <tr><td>用戶ID：</td><td>@user.UserId</td></tr>
                                <tr><td>用戶名稱：</td><td>@user.UserName</td></tr>
                                <tr><td>電子郵件：</td><td>@user.Email</td></tr>
                                <tr><td>電話：</td><td>@user.Phone</td></tr>
                                <tr><td>地址：</td><td>@user.Address</td></tr>
                                <tr><td>建立時間：</td><td>@user.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>統計資訊</h6>
                            <table class="table table-sm">
                                <tr><td>錢包點數：</td><td>@(user.UserWallets?.FirstOrDefault()?.Points ?? 0) 點</td></tr>
                                <tr><td>寵物數量：</td><td>@(user.Pets?.Count ?? 0) 隻</td></tr>
                                <tr><td>簽到次數：</td><td>@(user.UserSignInStats?.Count ?? 0) 次</td></tr>
                                <tr><td>優惠券數量：</td><td>@(user.Coupons?.Count ?? 0) 張</td></tr>
                                <tr><td>電子券數量：</td><td>@(user.Evouchers?.Count ?? 0) 張</td></tr>
                                <tr><td>小遊戲次數：</td><td>@(user.MiniGames?.Count ?? 0) 次</td></tr>
                            </table>
                        </div>
                    </div>
                    
                    @if (user.Pets?.Any() == true)
                    {
                        <h6>寵物資訊</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>寵物名稱</th>
                                        <th>等級</th>
                                        <th>經驗值</th>
                                        <th>飢餓度</th>
                                        <th>心情</th>
                                        <th>體力</th>
                                        <th>清潔度</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pet in user.Pets)
                                    {
                                        <tr>
                                            <td>@pet.PetName</td>
                                            <td>@pet.Level</td>
                                            <td>@pet.Experience</td>
                                            <td>@pet.Hunger</td>
                                            <td>@pet.Mood</td>
                                            <td>@pet.Stamina</td>
                                            <td>@pet.Cleanliness</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                    <button type="button" class="btn btn-warning">編輯用戶</button>
                    <form asp-action="DeleteUser" method="post" class="d-inline" 
                          onsubmit="return confirm('確定要刪除用戶 @user.UserName 及其所有相關資料嗎？')">
                        <input type="hidden" name="id" value="@user.UserId" />
                        <button type="submit" class="btn btn-danger">刪除用戶</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}