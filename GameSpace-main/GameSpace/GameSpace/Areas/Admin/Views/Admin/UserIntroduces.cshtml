@model IEnumerable<GameSpace.Models.UserIntroduce>

@{
    ViewData["Title"] = "用戶介紹審核";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">用戶介紹審核</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>介紹ID</th>
                                    <th>用戶</th>
                                    <th>介紹內容</th>
                                    <th>審核狀態</th>
                                    <th>建立時間</th>
                                    <th>審核時間</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var introduce in Model)
                                {
                                    <tr>
                                        <td>@introduce.UserIntroduceId</td>
                                        <td>@introduce.User?.UserName</td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 200px;" title="@introduce.IntroduceContent">
                                                @introduce.IntroduceContent
                                            </div>
                                        </td>
                                        <td>
                                            @if (introduce.IsApproved == true)
                                            {
                                                <span class="badge bg-success">已通過</span>
                                            }
                                            else if (introduce.IsApproved == false)
                                            {
                                                <span class="badge bg-danger">已拒絕</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">待審核</span>
                                            }
                                        </td>
                                        <td>@introduce.CreatedTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            @if (introduce.ApprovedTime.HasValue)
                                            {
                                                @introduce.ApprovedTime.Value.ToString("yyyy-MM-dd HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">未審核</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        data-bs-toggle="modal" data-bs-target="#introduceModal@(introduce.UserIntroduceId)">
                                                    <i class="fas fa-eye"></i> 查看
                                                </button>
                                                @if (introduce.IsApproved == null)
                                                {
                                                    <form asp-action="ApproveUserIntroduce" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@introduce.UserIntroduceId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                                            <i class="fas fa-check"></i> 通過
                                                        </button>
                                                    </form>
                                                    <form asp-action="RejectUserIntroduce" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@introduce.UserIntroduceId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-times"></i> 拒絕
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled>
                                                        <i class="fas fa-check-circle"></i> 已審核
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 用戶介紹詳情模態框 -->
@foreach (var introduce in Model)
{
    <div class="modal fade" id="introduceModal@(introduce.UserIntroduceId)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">用戶介紹詳情</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>基本資訊</h6>
                            <table class="table table-sm">
                                <tr><td>介紹ID：</td><td>@introduce.UserIntroduceId</td></tr>
                                <tr><td>用戶：</td><td>@introduce.User?.UserName</td></tr>
                                <tr><td>用戶ID：</td><td>@introduce.UserId</td></tr>
                                <tr><td>建立時間：</td><td>@introduce.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</td></tr>
                                <tr><td>審核時間：</td><td>@(introduce.ApprovedTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "未審核")</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>審核狀態</h6>
                            <div class="text-center">
                                @if (introduce.IsApproved == true)
                                {
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle fa-3x"></i>
                                        <h5>已通過審核</h5>
                                        <p>此用戶介紹已通過審核</p>
                                    </div>
                                }
                                else if (introduce.IsApproved == false)
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-times-circle fa-3x"></i>
                                        <h5>已拒絕審核</h5>
                                        <p>此用戶介紹已被拒絕</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-clock fa-3x"></i>
                                        <h5>待審核</h5>
                                        <p>此用戶介紹等待審核</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>介紹內容</h6>
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">@introduce.IntroduceContent</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>審核操作</h6>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                @if (introduce.IsApproved == null)
                                {
                                    <form asp-action="ApproveUserIntroduce" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@introduce.UserIntroduceId" />
                                        <button type="submit" class="btn btn-success btn-lg">
                                            <i class="fas fa-check"></i> 通過審核
                                        </button>
                                    </form>
                                    <form asp-action="RejectUserIntroduce" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@introduce.UserIntroduceId" />
                                        <button type="submit" class="btn btn-danger btn-lg">
                                            <i class="fas fa-times"></i> 拒絕審核
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-secondary btn-lg" disabled>
                                        <i class="fas fa-check-circle"></i> 已審核完成
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
}