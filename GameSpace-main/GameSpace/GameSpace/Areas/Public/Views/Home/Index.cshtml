@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to GameSpace</h1>
    <p class="lead">Your ultimate gaming platform with mini-games, social features, and more!</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-gamepad fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Mini Games</h5>
                <p class="card-text">Play exciting mini-games and earn points!</p>
                <a href="@Url.Action("Index", "MiniGame", new { area = "MiniGame" })" class="btn btn-primary">Play Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-success mb-3"></i>
                <h5 class="card-title">Social Hub</h5>
                <p class="card-text">Connect with other players and chat!</p>
                <a href="@Url.Action("Index", "Home", new { area = "social_hub" })" class="btn btn-success">Join Chat</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-wallet fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Wallet System</h5>
                <p class="card-text">Manage your points and rewards!</p>
                <a href="@Url.Action("Index", "UserWallet", new { area = "MiniGame" })" class="btn btn-warning">View Wallet</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Featured Games</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>Memory Game</h6>
                                <p class="small">Test your memory skills</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>Puzzle Game</h6>
                                <p class="small">Solve challenging puzzles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>Quiz Game</h6>
                                <p class="small">Answer questions and win</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6>More Coming Soon!</h6>
                                <p class="small">Stay tuned for updates</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>