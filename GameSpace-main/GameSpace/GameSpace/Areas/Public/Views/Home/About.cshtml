@{
    ViewData["Title"] = "About GameSpace";
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>About GameSpace</h3>
            </div>
            <div class="card-body">
                <p class="lead">GameSpace is a comprehensive gaming platform that brings together mini-games, social features, and user management in one exciting experience.</p>
                
                <h4>Our Mission</h4>
                <p>To create an engaging and interactive gaming environment where players can enjoy mini-games, connect with others, and manage their gaming experience through a comprehensive platform.</p>
                
                <h4>Features</h4>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Mini Games</h5>
                        <ul>
                            <li>Memory Games</li>
                            <li>Puzzle Games</li>
                            <li>Quiz Games</li>
                            <li>Action Games</li>
                            <li>Strategy Games</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h5>Social Features</h5>
                        <ul>
                            <li>Forum Discussions</li>
                            <li>User Management</li>
                            <li>Pet Care System</li>
                            <li>Wallet Management</li>
                            <li>Online Store</li>
                        </ul>
                    </div>
                </div>
                
                <h4>Technology</h4>
                <p>Built with modern web technologies including ASP.NET Core, Entity Framework, and responsive design principles to ensure a smooth and enjoyable user experience.</p>
                
                <h4>Contact Us</h4>
                <p>For questions, suggestions, or support, please visit our <a href="@Url.Action("Contact")">Contact</a> page.</p>
            </div>
        </div>
    </div>
</div>