@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Privacy Policy</h3>
            </div>
            <div class="card-body">
                <h4>Information We Collect</h4>
                <p>We collect information you provide directly to us, such as when you create an account, play games, or contact us for support.</p>
                
                <h4>How We Use Your Information</h4>
                <p>We use the information we collect to provide, maintain, and improve our services, including:</p>
                <ul>
                    <li>Providing game services and features</li>
                    <li>Processing transactions and managing your account</li>
                    <li>Communicating with you about our services</li>
                    <li>Improving our games and user experience</li>
                </ul>
                
                <h4>Information Sharing</h4>
                <p>We do not sell, trade, or otherwise transfer your personal information to third parties without your consent, except as described in this policy.</p>
                
                <h4>Data Security</h4>
                <p>We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>
                
                <h4>Contact Us</h4>
                <p>If you have any questions about this Privacy Policy, please contact us at privacy@gamespace.com</p>
                
                <p><small>Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small></p>
            </div>
        </div>
    </div>
</div>