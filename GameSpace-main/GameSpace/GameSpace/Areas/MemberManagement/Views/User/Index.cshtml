@model IEnumerable<GameSpace.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/MemberManagement/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>User Management</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Gender</th>
                                <th>Create Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserID</td>
                                    <td>@item.UserName</td>
                                    <td>@item.UserEmail</td>
                                    <td>@item.UserPhone</td>
                                    <td>@item.UserGender</td>
                                    <td>@item.UserCreateTime.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = item.UserID })" class="btn btn-sm btn-info">Details</a>
                                        <a href="@Url.Action("Edit", new { id = item.UserID })" class="btn btn-sm btn-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>