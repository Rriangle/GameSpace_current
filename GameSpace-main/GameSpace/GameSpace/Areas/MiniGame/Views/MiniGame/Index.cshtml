@model IEnumerable<GameSpace.Models.MiniGame>

@{
    ViewData["Title"] = "Mini Games";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Mini Games</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h5 class="card-title">Memory Game</h5>
                                <p class="card-text">Test your memory with this fun game!</p>
                                <a href="@Url.Action("StartGame", new { gameType = "Memory" })" class="btn btn-primary">Play Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h5 class="card-title">Puzzle Game</h5>
                                <p class="card-text">Solve puzzles to earn points!</p>
                                <a href="@Url.Action("StartGame", new { gameType = "Puzzle" })" class="btn btn-primary">Play Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h5 class="card-title">Quiz Game</h5>
                                <p class="card-text">Answer questions to win rewards!</p>
                                <a href="@Url.Action("StartGame", new { gameType = "Quiz" })" class="btn btn-primary">Play Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Recent Games</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Game Type</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Score</th>
                                <th>Points Earned</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.GameType</td>
                                    <td>@item.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@(item.EndTime?.ToString("yyyy-MM-dd HH:mm:ss") ?? "In Progress")</td>
                                    <td>@item.Score</td>
                                    <td>@item.Point</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>