@model IEnumerable<GameSpace.Models.WalletHistory>

@{
    ViewData["Title"] = "Wallet History";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Wallet History</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Transaction Type</th>
                                <th>Amount</th>
                                <th>Description</th>
                                <th>Transaction Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.TransactionType == "Earn")
                                        {
                                            <span class="badge bg-success">@item.TransactionType</span>
                                        }
                                        else if (item.TransactionType == "Spend")
                                        {
                                            <span class="badge bg-danger">@item.TransactionType</span>
                                        }
                                        else if (item.TransactionType == "Bonus")
                                        {
                                            <span class="badge bg-warning">@item.TransactionType</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.TransactionType</span>
                                        }
                                    </td>
                                    <td>@item.Amount</td>
                                    <td>@item.Description</td>
                                    <td>@item.TransactionTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>