@model GameSpace.Models.User_Wallet

@{
    ViewData["Title"] = "My Wallet";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>My Wallet</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Points Balance</h4>
                        <p class="h2 text-primary">@Model.User_Point</p>
                    </div>
                    <div class="col-md-6">
                        <h4>Actions</h4>
                        <a href="@Url.Action("History")" class="btn btn-outline-primary">View History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Quick Actions</h4>
            </div>
            <div class="card-body">
                <a href="@Url.Action("Index", "UserSignInStats")" class="btn btn-success btn-block mb-2">Daily Sign In</a>
                <a href="@Url.Action("Index", "Pet")" class="btn btn-info btn-block mb-2">Pet Care</a>
                <a href="@Url.Action("Index", "MiniGame")" class="btn btn-warning btn-block">Play Mini Game</a>
            </div>
        </div>
    </div>
</div>