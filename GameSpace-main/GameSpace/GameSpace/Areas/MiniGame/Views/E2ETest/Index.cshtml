@{
    ViewData["Title"] = "E2E整合測試";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">E2E整合測試結果</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var result in ViewBag.TestResults)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card @(result.Status == "通過" ? "border-success" : result.Status == "失敗" ? "border-danger" : "border-warning")">
                                    <div class="card-header @(result.Status == "通過" ? "bg-success text-white" : result.Status == "失敗" ? "bg-danger text-white" : "bg-warning text-dark")">
                                        <h5 class="card-title mb-0">
                                            @if (result.Status == "通過")
                                            {
                                                <i class="fas fa-check-circle"></i>
                                            }
                                            else if (result.Status == "失敗")
                                            {
                                                <i class="fas fa-times-circle"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-exclamation-triangle"></i>
                                            }
                                            @result.TestName
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <strong>狀態：</strong>
                                            <span class="badge @(result.Status == "通過" ? "bg-success" : result.Status == "失敗" ? "bg-danger" : "bg-warning")">
                                                @result.Status
                                            </span>
                                        </p>
                                        <p class="card-text">
                                            <strong>訊息：</strong> @result.Message
                                        </p>
                                        <p class="card-text">
                                            <strong>詳細資訊：</strong> @result.Details
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title">測試統計</h5>
                                </div>
                                <div class="card-body">
                                    @{
                                        var passedTests = ((List<TestResult>)ViewBag.TestResults).Count(r => r.Status == "通過");
                                        var failedTests = ((List<TestResult>)ViewBag.TestResults).Count(r => r.Status == "失敗");
                                        var skippedTests = ((List<TestResult>)ViewBag.TestResults).Count(r => r.Status == "跳過");
                                        var totalTests = ((List<TestResult>)ViewBag.TestResults).Count;
                                    }
                                    
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h3 class="text-success">@passedTests</h3>
                                                <p>通過</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h3 class="text-danger">@failedTests</h3>
                                                <p>失敗</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h3 class="text-warning">@skippedTests</h3>
                                                <p>跳過</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h3 class="text-info">@totalTests</h3>
                                                <p>總計</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="progress mt-3">
                                        <div class="progress-bar bg-success" style="width: @((double)passedTests / totalTests * 100)%"></div>
                                        <div class="progress-bar bg-danger" style="width: @((double)failedTests / totalTests * 100)%"></div>
                                        <div class="progress-bar bg-warning" style="width: @((double)skippedTests / totalTests * 100)%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("Index", "Test")" class="btn btn-primary btn-lg">
                                <i class="fas fa-database"></i> 前往資料庫測試
                            </a>
                            <a href="@Url.Action("Index", "UserSignInStats")" class="btn btn-success btn-lg">
                                <i class="fas fa-sign-in-alt"></i> 前往簽到頁面
                            </a>
                            <a href="@Url.Action("Index", "UserWallet")" class="btn btn-warning btn-lg">
                                <i class="fas fa-wallet"></i> 前往錢包頁面
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>