@model GameSpace.Models.Pet

@{
    ViewData["Title"] = "我的寵物";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>我的寵物</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>寵物資訊</h4>
                        <p><strong>名稱：</strong> @Model.PetName</p>
                        <p><strong>等級：</strong> @Model.PetLevel</p>
                        <p><strong>經驗值：</strong> @Model.PetExp</p>
                        <p><strong>快樂度：</strong> @Model.PetHappiness</p>
                    </div>
                    <div class="col-md-6">
                        <h4>動作</h4>
                        <a href="@Url.Action("Feed")" class="btn btn-primary">餵食寵物</a>
                        <a href="@Url.Action("Play")" class="btn btn-success">與寵物遊玩</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>寵物狀態</h4>
            </div>
            <div class="card-body">
                <div class="progress mb-2">
                    <div class="progress-bar" role="progressbar" style="width: @(Model.PetHappiness)%" aria-valuenow="@Model.PetHappiness" aria-valuemin="0" aria-valuemax="100">
                        @Model.PetHappiness%
                    </div>
                </div>
                <small class="text-muted">快樂度等級</small>
            </div>
        </div>
    </div>
</div>