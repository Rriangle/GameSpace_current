@model GameSpace.Models.Pet

@{
    ViewData["Title"] = "餵食寵物";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>餵食您的寵物</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>@Model.PetName</h4>
                        <p><strong>等級：</strong> @Model.PetLevel</p>
                        <p><strong>經驗值：</strong> @Model.PetExp</p>
                        <p><strong>快樂度：</strong> @Model.PetHappiness%</p>
                    </div>
                    <div class="col-md-6">
                        <div class="progress mb-2">
                            <div class="progress-bar" role="progressbar" style="width: @(Model.PetHappiness)%" aria-valuenow="@Model.PetHappiness" aria-valuemin="0" aria-valuemax="100">
                                @Model.PetHappiness%
                            </div>
                        </div>
                        <small class="text-muted">快樂度等級</small>
                    </div>
                </div>
                <hr>
                <form asp-action="Feed" method="post">
                    <div class="mb-3">
                        <label class="form-label">選擇食物</label>
                        <select name="foodType" class="form-control">
                            <option value="basic">基本食物（+10 快樂度）</option>
                            <option value="premium">高級食物（+25 快樂度）</option>
                            <option value="deluxe">豪華食物（+50 快樂度）</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">返回寵物</a>
                        <button type="submit" class="btn btn-primary">餵食寵物</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>寵物照護提示</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-heart text-danger"></i> 定期餵食您的寵物</li>
                    <li><i class="fas fa-gamepad text-primary"></i> 遊玩遊戲來增加快樂度</li>
                    <li><i class="fas fa-star text-warning"></i> 高等級寵物需要更好的食物</li>
                    <li><i class="fas fa-clock text-info"></i> 每天檢查您的寵物</li>
                </ul>
            </div>
        </div>
    </div>
</div>