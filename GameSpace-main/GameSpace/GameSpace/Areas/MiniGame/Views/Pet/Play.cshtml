@model GameSpace.Models.Pet

@{
    ViewData["Title"] = "與寵物遊玩";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>與 @Model.PetName 遊玩</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>@Model.PetName</h4>
                        <p><strong>等級：</strong> @Model.PetLevel</p>
                        <p><strong>經驗值：</strong> @Model.PetExp</p>
                        <p><strong>快樂度：</strong> @Model.PetHappiness%</p>
                    </div>
                    <div class="col-md-6">
                        <div class="progress mb-2">
                            <div class="progress-bar" role="progressbar" style="width: @(Model.PetHappiness)%" aria-valuenow="@Model.PetHappiness" aria-valuemin="0" aria-valuemax="100">
                                @Model.PetHappiness%
                            </div>
                        </div>
                        <small class="text-muted">快樂度等級</small>
                    </div>
                </div>
                <hr>
                <form asp-action="Play" method="post">
                    <div class="mb-3">
                        <label class="form-label">選擇遊戲</label>
                        <select name="gameType" class="form-control">
                            <option value="fetch">接球遊戲（+15 快樂度，+5 經驗值）</option>
                            <option value="hide">捉迷藏（+20 快樂度，+10 經驗值）</option>
                            <option value="trick">技巧訓練（+25 快樂度，+15 經驗值）</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">返回寵物</a>
                        <button type="submit" class="btn btn-success">開始遊戲</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>遊玩活動</h4>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <div class="list-group-item">
                        <h6>接球遊戲</h6>
                        <small>丟球並看著您的寵物把它撿回來！</small>
                    </div>
                    <div class="list-group-item">
                        <h6>捉迷藏</h6>
                        <small>躲起來讓您的寵物找到您！</small>
                    </div>
                    <div class="list-group-item">
                        <h6>技巧訓練</h6>
                        <small>教您的寵物新技巧！</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>