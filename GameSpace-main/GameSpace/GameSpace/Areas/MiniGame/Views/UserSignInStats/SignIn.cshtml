@{
    ViewData["Title"] = "Daily Sign In";
    Layout = "~/Areas/MiniGame/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Daily Sign In</h3>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <h4>Welcome back!</h4>
                    <p>Sign in daily to earn points and rewards!</p>
                    
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5>Day 1</h5>
                                        <p>10 Points</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>Day 2</h5>
                                        <p>20 Points</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5>Day 3+</h5>
                                        <p>30 Points</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="SignIn" method="post">
                        <button type="submit" class="btn btn-success btn-lg">Sign In Today</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>