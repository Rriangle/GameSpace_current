@model IEnumerable<GameSpace.Models.UserSignInStat>

@{
    ViewData["Title"] = "簽到歷史";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>簽到歷史</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>簽到時間</th>
                                <th>獲得點數</th>
                                <th>狀態</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SignTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@item.Point</td>
                                    <td>
                                        @if (item.Point > 0)
                                        {
                                            <span class="badge bg-success">成功</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">無點數</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>