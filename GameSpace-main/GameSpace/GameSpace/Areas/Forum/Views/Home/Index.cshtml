@{
    ViewData["Title"] = "Forum Home";
    Layout = "~/Areas/Forum/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Welcome to GameSpace Forum</h3>
            </div>
            <div class="card-body">
                <p>Join the discussion and connect with other GameSpace players!</p>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Recent Topics</h5>
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">New Mini Game Released!</h6>
                                    <small>2 hours ago</small>
                                </div>
                                <p class="mb-1">Check out the latest puzzle game...</p>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Pet Care Tips</h6>
                                    <small>1 day ago</small>
                                </div>
                                <p class="mb-1">How to keep your virtual pet happy...</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5>Quick Actions</h5>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("CreateTopic")" class="btn btn-primary">Create New Topic</a>
                            <a href="@Url.Action("Topics")" class="btn btn-outline-primary">Browse All Topics</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>