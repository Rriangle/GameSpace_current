@{
    ViewData["Title"] = "Forum Topics";
    Layout = "~/Areas/Forum/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Forum Topics</h3>
                <a href="@Url.Action("CreateTopic")" class="btn btn-primary">Create New Topic</a>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Welcome to GameSpace Forum!</h6>
                            <small class="text-muted">3 days ago</small>
                        </div>
                        <p class="mb-1">Introduce yourself and get to know other players...</p>
                        <small>Posted by Admin</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">New Mini Game Tips</h6>
                            <small class="text-muted">1 week ago</small>
                        </div>
                        <p class="mb-1">Share your strategies and tips for the latest games...</p>
                        <small>Posted by GameMaster</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Pet Care Discussion</h6>
                            <small class="text-muted">2 weeks ago</small>
                        </div>
                        <p class="mb-1">How do you keep your virtual pet happy and healthy?</p>
                        <small>Posted by PetLover</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>